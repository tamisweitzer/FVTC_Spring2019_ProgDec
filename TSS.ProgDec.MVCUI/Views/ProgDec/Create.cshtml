@model TSS.ProgDec.MVCUI.ViewModels.ProgDecProgramsStudents 

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal mt-4">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ProgDec.ProgramId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ProgDec.ProgramId, new SelectList(Model.Programs, "Id", "Description", Model.ProgDec), null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgDec.ProgramId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProgDec.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ProgDec.StudentId, new SelectList(Model.Students, "Id", "FullName", Model.ProgDec), null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgDec.StudentId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.ProgDec.Advisors, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.AdvisorIds, new MultiSelectList(Model.Advisors, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProgDec.Advisors, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default btn-lg btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
